<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>OpenSamples</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
    <div class="container-fluid">
        <div class="d-flex align-items-center gap-2">
          <a href="/samples" class="navbar-brand fs-3">OpenSamples</a>
        </div>

        <div class="mx-auto">
          <form action="/samples" method="get" class="d-flex">
            <input class="form-control form-control-sm" type="text" name="q" placeholder="Search" value="<%= typeof q !== 'undefined' ? q : '' %>">
          <button class="btn btn-sm btn-primary ms-2" type="submit">Search</button>
          </form>
        </div>

        <div>
          <a href="/random" class="btn btn-sm btn-secondary">
            Random
          </a>
          <a href="/upload" class="btn btn-sm btn-secondary">
            Upload
          </a>
        </div>
    </div>
</nav>

<main class="container">
    <%- body %>
</main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
