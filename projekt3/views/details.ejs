<div class="container mt-4">

  <div class="row justify-content-center">
    <div class="col-md-6">

      <div class="card shadow-sm">
        <img src="/img/wave.svg" class="card-img-top" alt="waveform">

        <div class="card-body">
          <h4 class="card-title"><%= sample.name %></h4>

          <p class="mb-1"><strong>Author:</strong> <%= sample.author %></p>
          <p class="mb-1"><strong>Key:</strong> <%= sample.key %></p>
          <p class="mb-3"><strong>Tempo:</strong> <%= sample.tempo %> BPM</p>

          <% if (sample.description) { %>
            <p><%= sample.description %></p>
          <% } %>

        </div>
        <div class="card-footer">
        <div class="d-flex gap-2 m-1">

          <a href="/samples/<%= sample.id %>/play"
             class="btn btn-primary btn-sm w-50">
            Play
          </a>

          <a href="/samples/<%= sample.id %>/download"
             class="btn btn-secondary btn-sm w-50">
            Download
          </a>


        </div>
        <div class="d-flex gap-2 m-1">
          <a href="/samples/<%= sample.id %>/edit"
             class="btn btn-secondary btn-sm w-50">
            Edit
          </a>

          <a href="/samples/<%= sample.id %>/delete"
             class="btn btn-secondary btn-sm w-50">
            Delate
          </a>
        </div>
        </div>
      </div>

    </div>
  </div>

</div>
